<body>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                  </button>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Spring zum Jahr<span class="caret"></span></a>
                        <ul class="dropdown-menu">
{{ range .Years }}
                            <li><a href="#{{ .Date }}">{{ .Date }}</a></li>
{{ end}}
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Spring zum SKill<span class="caret"></span></a>
                        <ul class="dropdown-menu">
{{ range .SkillSections }}
                            <li><a href="#{{ .Title }}">{{ .Title }}</a></li>
{{ end}}
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

  <div class="container-fluid">

    <div class="row" id="personaldata">
         <div class="p-2 panel panel-default">
             <div class="panel-body">
                    <div class="col-xs-12 col-md-4" id="personalpic_container">
                        <img src="pics/radicke_olaf.jpg" height="320"  alt="cover">
                    </div>
                    <div class="col-xs-12 col-md-8" id="personalpic_container">
                        <b>Name:</b> Olaf Radicke<br>
                        <b>Geboren:</b> 12.7.1971 in Berlin<br>
                        <b>Anschrift:</b> Alpenstr. 9, 86159 Augsburg<br>
                        <b>Telefon:</b> 0176 â€“ 23 187 609<br>
                        <b>E-Mail:</b> <a href="mailto:briefkasten@olaf-radicke.de">briefkasten@olaf-radicke.de</a><br>
                        <b>Xing:</b> <a href="https://www.xing.com/profile/Olaf_Radicke">https://www.xing.com/profile/Olaf_Radicke</a><br>
                        <b>GitHub:</b> <a href="https://github.com/OlafRadicke">https://github.com/OlafRadicke</a><br>
                    </div><!-- class="col-xs-12 col-md-8" id="personalpic_container" -->
             </div> <!--  class="panel-body" -->
        </div> <!-- p-2 panel panel-default -->
     </div><!-- class="row" id="personaldata" -->
     <br>


        <!--<div class="mainbox">-->
      <div class="row" id="mainbox">
        <div class="col-xs-12 col-md-8" id="timeline_container">
          <div class="col-xs-12" id="timeline-item"><hr><h2>Timeline</h2><hr></div>
          <div class="row" id="timeline-items">

{{ range .Years }}
            <div class="col-xs-12 col-md-6" id="timeline-item">

    {{ range .Jobs }}
                <div class="panel panel-default">
                    <div class="panel-heading"><b>POSITION:</b> {{ .Heading }}</div>
                    <div class="panel-body">
                        {{ .Body }}
                        <hr>
                        <b>{{ .Date }}</b>
                    </div>
                </div>
    {{ end }}

            </div><!-- end timeline-item -->

            <div class="col-xs-12 col-md-6" id="timeline-item_inverted">

    {{ range .OtherTasks}}
                <div class="panel panel-default">
                      <div class="panel-heading">{{ .Heading }}</div>
                      <div class="panel-body">
                {{ range .Parts}}
                            <p><b>{{ .Key }}</b><br> {{ .Value }}</p>
                {{ end }}
                            <hr>
                            <b>{{ .Date }}</b>
                      </div>
                </div>
    {{ end }}
            </div><!-- end timeline-item_inverted -->


                  <div class="col-xs-12 col-md-12"><hr><h3 id="{{ .Date }}">{{ .Date }}</h3><hr></div>
{{ end}}

              </div> <!--row timeline-items  -->
            </div> <!--class="col-xs-12 col-md-8" id="timeline_container"  -->

        <div class="col-xs-12 col-md-4" id="skills_container">
            <hr>
            <h2>Skills</h2>
            <hr>
{{ range .SkillSections }}
            <div class="panel panel-default">
                  <div class="panel-heading" id="{{ .Title }}">{{ .Title }}</div>
                  <div class="panel-body">
    {{ range .Items }}

                        <div class="progress">
                          <div class="progress-bar progress-bar-info" role="progressbar"
                          aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:{{ .Score }}%">
                            {{ .Topic }}
                          </div>
                        </div>

    {{ end }}
                </div>
            </div>
{{ end }}

            </div> <!-- end skills_container -->
        </div> <!-- class="row" id="mainbox" -->
    </div> <!-- class="container-fluid"> -->
  </body>
  </html>
