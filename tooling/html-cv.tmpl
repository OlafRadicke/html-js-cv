      <div class="row" id="mainbox">
        <div class="col-xs-12 col-md-8" id="timeline_container">
    			<div class="col-xs-12" id="timeline-item"><h2>Timeline</h2></div>
          <div class="row" id="timeline-items">

            {{ range $year  := $vita.Years }}
            <div class="col-xs-12 col-md-6" id="timeline-item">

              {{ range $job := $year.Jobs }}
              <div class="panel panel-default">
                <div class="panel-heading">{{ $job.Heading }}</div>
                <div class="panel-body">{{ $job.Body }}</div>
              </div>
              {{ end }}

            </div>

          <div class="col-xs-12 col-md-6" id="timeline-item_inverted">

            {{ range $other := $year.OtherTasks}}
            <div class="panel panel-default">
              <div class="panel-heading">{{ $other.Heading }}</div>
              <div class="panel-body">
                <p><b>Thema:</b><br> {{ $other.Topic }}</p>
                <p><b>URLs:</b><br> <a href="{{ $other.topic }}"><i>{{ $other.Uri }}</i></a></p>
                <hr>
                <b>{{ $other.Date }}</b>
              </div>
            </div>
            {{ end }}


  				<div class="col-xs-12 col-md-12"><h2 id="{{ $year.date }}">{{ $year.Date }}</h2></div>

          {{ end}}

    		</div> <!-- end timline_conainer -->

        <div class="col-xs-12 col-md-4" id="skills_container">
    				<h2>Skills</h2>
            {{ range $skillSection  := $vita.SkillSections }}

						<h3 id="cicd">{{ $skillSection.Title }}</h3>
						<hr>

            {{ range $skill  := $skillSection.Items }}
            <div class="progress">
              <div class="progress-bar progress-bar-striped active" role="progressbar"
              aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:{{ $skill.Score }}%">
                {{ $skill.Topic }}
              </div>
            </div>
            {{ end }}
            {{ end }}

